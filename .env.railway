# ============================================================================
# LANGTUNE SERVICE - Railway Environment Variables
# ============================================================================
# Deploy from: langtrain-ai/langtune repository
# Service name: langtune-service
# ============================================================================

APP_NAME="Langtune Service"
DEBUG="false"
HOST="0.0.0.0"
PORT="8000"

# Database (Railway Postgres)
DATABASE_URL="postgresql+asyncpg://${{Postgres.PGUSER}}:${{Postgres.PGPASSWORD}}@${{Postgres.PGHOST}}:${{Postgres.PGPORT}}/${{Postgres.PGDATABASE}}"

# Redis (Railway)
REDIS_URL="redis://${{Redis.REDISUSER}}:${{Redis.REDISPASSWORD}}@${{Redis.REDISHOST}}:${{Redis.REDISPORT}}"

# Model Training
HF_TOKEN="<REPLACE_ME>"
MODAL_TOKEN_ID="<REPLACE_ME>"
MODAL_TOKEN_SECRET="<REPLACE_ME>"

# Internal Service Connections (Railway networking)
LANGTRAIN_SERVER_URL="http://langtrain-server.railway.internal:8000"
LANGVISION_SERVICE_URL="http://langvision-service.railway.internal:8000"
LANGTRAIN_WORKER_URL="http://langtrain-worker.railway.internal:8000"

# Auth
SECRET_KEY="<REPLACE_ME>"
JWT_SECRET="<REPLACE_ME>"

# CUDA/Training Config
CUDA_VISIBLE_DEVICES="all"
TORCH_HOME="/app/.cache/torch"
TRANSFORMERS_CACHE="/app/.cache/transformers"
